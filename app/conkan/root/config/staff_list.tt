<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="conkan stafflist">
<meta name="author" content="Studio REM">
<title>Conkan StaffList</title>
[%- SET useWijGrid = 1 %]
[% PROCESS 'ttwijgethead.tt' -%]
</head>
[%- SET self_li_id = 'config_staff' -%]
[%- PROCESS 'tthead.tt' -%]
<div class="container" ng-app="wijmo">
  <div class="well" id="gridlist" ng-controller="MyController">
    <wij-grid id="dataGrid" data="list"
        class="table table-bordered"
        allow-col-sizing="true"
        allow-sorting="true"
        allow-keyboard-navigation="true"
        ensureColumnsPxWidth="true"
        highlight-on-hover="false"
>
      <scrolling-settings
        mode="vertical"
        static-row-index="-1"
      ></scrolling-settings>
      <columns>
        <column width="23%" header-text="名前"></column>
        <column width="23%" header-text="役割"></column>
        <column width="23%" header-text="担当名"></column>
        <column width="23%" header-text="最終ログイン日時"></column>
        <column             header-text=""></column>
      </columns>
    </wij-grid>
    <script type="text/javascript"> <!-- 貼り付けるdataはsrcではなく埋め込み -->
      function MyController( $scope, $locale ) {
        $scope.list = [
          [% FOREACH item = list -%]
            [%- IF item.rmdate;
              SET rmcol = "style='background-color:gray;'";
            ELSE;
              SET rmcol = "";
            END -%]
                [ "<span [% rmcol %]>[% item.name | html %]</span>", "<span [% rmcol %]>
              [%- SWITCH item.role -%]
                [%- CASE 'NORM' -%] 企画スタッフ
                [%- CASE 'PG'   -%] 企画管理スタッフ
                [%- CASE 'ROOT' -%] システム管理者
              [%- END -%]
              </span>", "<span [% rmcol %]>[% item.tname | html %]</span>", "<span [% rmcol %]>[% item.lastlogin | html %]</span>", "<span [% rmcol %]><button type='button' class='btn btn-primary btn-xs'
              [%- IF rmcol -%]
                >無効
              [%- ELSE -%]
                data-toggle='modal' data-target='#editStaff' data-whatever='[% item.staffid %]' data-whatrole='[% item.role %]'>編集
              [%- END -%]
            </button></span>" ],
          [% END %]
            [ "", "", "", "" ]
        ];
      }
    </script>
  </div> <!-- End of well gridlist -->
</div> <!-- End of container wijmo -->

<!-- Modal -->
<div class="modal fade" id="editStaff" tabindex="-1" role="dialog" aria-labelledby="editStaffLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="editStaffLabel">Edit Profile</h4>
      </div>
      <div class="modal-body" id="editStaffContent">
        <FORM>情報取得中</FORM>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
        <button type="button" class="btn " id="dodel">削除</button>
        <button type="button" class="btn btn-primary" id="dobtn">更新</button>
      </div>
    </div>
  </div>
</div>
[% PROCESS 'tttail.tt' %]
<script type="text/javascript" src="/static/js/conkan_staff_list.js"></script>
</body>
</html>
